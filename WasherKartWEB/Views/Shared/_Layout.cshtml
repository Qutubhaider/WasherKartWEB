    <script async src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/js/toastr.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @if (TempData["Message"] != null)
    {
        @if (Convert.ToInt32(TempData["ResultCode"]) == (int)WasherKartUtility.Utilities.CommonFunctions.ActionResponse.Error)
        {
            <script type="text/javascript">
                toastr.error("@(TempData["Message"] as string)");
            </script>
        }
        else if (Convert.ToInt32(TempData["ResultCode"]) == (int)WasherKartUtility.Utilities.CommonFunctions.ActionResponse.Warning)
        {
            <script type="text/javascript">
                toastr.warning("@(TempData["Message"] as string)");
            </script>
        }
        else
        {
            <script type="text/javascript">
                toastr.success("@(TempData["Message"] as string)");
            </script>
        }
    }
